{
    "compilerOptions": {
        "moduleResolution": "Node",
        "target": "es5",
        "module":"CommonJS",
        "lib": ["es2015", "es2016", "es2017"],
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "lib",
        "esModuleInterop": true,
        "allowJs": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "test", "lib"]
}